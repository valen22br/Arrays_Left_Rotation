using namespace std;

int number_needed(string a, string b) {
    int count = 0,
        control = 0;
    bool result = false;
    
    for(int i = 0; i < a.length(); i++)
    {
        a[i] = tolower(a[i]);
    }
    
    for(int i = 0; i < b.length(); i++)
    {
        b[i] = tolower(b[i]);
    }
    
    
    sort(a.begin(), a.end());
    sort(b.begin(), b.end());
    //cout << "String a: " << a << endl;
    //cout << "String b: " << b << endl;
   for(int i = 0; i < a.length(); i++)
   {
       
       for(int j = control; j < b.length(); j++)
       {
           result = (a[i] == b[j]);
           if (result)
           {
               count++;
               control +=1;
               result = 0;
               break;
           }
         
       }
      
   }
    count = (a.length() + b.length()) - 2 * count;
    return count;
}

int main(){
    string a;
    //cin >> a;
    getline(cin, a);
    string b;
    //cin >> b;
    getline(cin, b);
    cout << number_needed(a, b) << endl;
    return 0;
}
